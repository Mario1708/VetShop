<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:background="#eff9fd">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="38dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Menú Categoría."
        android:id="@+id/tVmenu"
        android:textColor="#0095ff"
        android:textAlignment="center"
        android:textSize="28dp"
        android:autoText="false"
        android:allowUndo="false"
        android:elegantTextHeight="false"
        android:textIsSelectable="false"
        android:textStyle="italic"
        android:background="@mipmap/ic_tituloventana1"
        android:layout_margin="4dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/borde_stilo"
        android:id="@+id/scrollView2"
        android:layout_margin="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#e0eff7"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contacto"
                android:id="@+id/tvcontacto"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_toLeftOf="@+id/cBcontacto"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="40dp"
                android:layout_marginStart="40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Productos y Servicios"
                android:layout_below="@id/tvcontacto"
                android:id="@+id/tvpys"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_alignLeft="@+id/tvcontacto"
                android:layout_alignStart="@+id/tvcontacto"
                android:layout_alignRight="@+id/tvcontacto"
                android:layout_alignEnd="@+id/tvcontacto" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/tvservicio"
                android:layout_below="@id/tvpys"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_alignLeft="@+id/tvpys"
                android:layout_alignStart="@+id/tvpys"
                android:layout_alignRight="@+id/tvpys"
                android:layout_alignEnd="@+id/tvpys"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cBcontacto"
                android:layout_alignTop="@+id/tvcontacto"
                android:checked="false"
                android:layout_marginRight="38dp"
                android:layout_marginEnd="38dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cBpys"
                android:layout_alignTop="@+id/tvpys"
                android:checked="false"
                android:layout_alignLeft="@+id/cBcontacto"
                android:layout_alignStart="@+id/cBcontacto"
                android:layout_alignRight="@+id/cBcontacto"
                android:layout_alignEnd="@+id/cBcontacto" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>