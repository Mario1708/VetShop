<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_registro"
    android:orientation="horizontal">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_weight="1">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:id="@+id/imageButton2"
                android:background="#00ffffff" />
        </LinearLayout>

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Registrar Usuario "
            android:layout_marginBottom="92dp"
            android:textColor="#000000"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView"
            android:layout_weight="0.24"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/register"
            android:layout_below="@+id/linearLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/scrollView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_above="@+id/register">

                <TextView
                    android:id="@+id/tusuario"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Crear el nombre de Usuario*         "
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@+id/tusuario"
                    android:ems="10"
                    android:background="#d8d8d8"
                    android:layout_alignLeft="@+id/tusuario"
                    android:layout_alignStart="@+id/tusuario"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <TextView
                    android:id="@+id/tpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:layout_below="@+id/username"
                    android:layout_alignLeft="@+id/tusuario"
                    android:layout_alignStart="@+id/tusuario"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tpassword"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:layout_alignLeft="@+id/tpassword"
                    android:layout_alignStart="@+id/tpassword"
                    android:background="#d8d8d8"
                    android:layout_alignRight="@+id/username"
                    android:layout_alignEnd="@+id/username" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Ingrese por favor e-mail*"
                    android:id="@+id/tcorreo"
                    android:layout_below="@+id/password"
                    android:layout_alignLeft="@+id/password"
                    android:layout_alignStart="@+id/password"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/correo"
                    android:layout_below="@+id/tcorreo"
                    android:layout_alignLeft="@+id/tcorreo"
                    android:layout_alignStart="@+id/tcorreo"
                    android:background="#d8d8d8"
                    android:layout_alignRight="@+id/password"
                    android:layout_alignEnd="@+id/password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Número de Celular*"
                    android:id="@+id/tcelular"
                    android:layout_below="@+id/correo"
                    android:layout_alignLeft="@+id/correo"
                    android:layout_alignStart="@+id/correo"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/celular"
                    android:layout_below="@+id/tcelular"
                    android:layout_alignLeft="@+id/tcelular"
                    android:layout_alignStart="@+id/tcelular"
                    android:layout_alignRight="@+id/correo"
                    android:layout_alignEnd="@+id/correo"
                    android:background="#d8d8d8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección*"
                    android:id="@+id/tdireccion"
                    android:layout_below="@+id/celular"
                    android:layout_alignLeft="@+id/celular"
                    android:layout_alignStart="@+id/celular"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/direccion"
                    android:layout_below="@+id/tdireccion"
                    android:layout_alignLeft="@+id/tdireccion"
                    android:layout_alignStart="@+id/tdireccion"
                    android:layout_alignRight="@+id/celular"
                    android:layout_alignEnd="@+id/celular"
                    android:background="#d8d8d8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Nombre*"
                    android:id="@+id/tNombre"
                    android:layout_below="@+id/direccion"
                    android:layout_alignLeft="@+id/direccion"
                    android:layout_alignStart="@+id/direccion"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/nombre"
                    android:layout_below="@+id/tNombre"
                    android:layout_alignLeft="@+id/tNombre"
                    android:layout_alignStart="@+id/tNombre"
                    android:layout_alignRight="@+id/direccion"
                    android:layout_alignEnd="@+id/direccion"
                    android:background="#d8d8d8" />

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"></LinearLayout>


</LinearLayout>
